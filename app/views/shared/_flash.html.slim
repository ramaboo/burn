#flash
  .container-fluid
    .row
      .col-md-3
      .col-md-6
        - flash.delete(:timedout).each do |type, message|
          .alert.alert-dismissible.fade.show class=bootstrap_flash_class(type)
            = sanitize(message)
            button type="button" class="btn-close" data-bs-dismiss="alert"
      .col-md-3