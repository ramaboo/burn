.card.mb-3
  = card_header("envelope-open", admin_link_to_camp(@newsletter, "Subscription"), buttons: [header_show_button(@newsletter), header_admin_edit_button(@newsletter)])
  .card-table
    table.table
      tbody
        tr
          th ID
          td = @newsletter.id
        tr
          th User
          td = admin_link_to_user(@newsletter.user)
        tr
          th List
          td = newsletter_list_badge(@newsletter)
        tr
          th Unsubscribed
          td = admin_time(@newsletter.unsubscribed_at)
        tr
          th Created
          td = admin_time(@newsletter.created_at)
        tr
          th Updated
          td = admin_time(@newsletter.updated_at)