- if [:rejected, :completed].exclude?(resource.status.to_sym) && policy([:admin, resource]).complete?
  .card.mb-3
    = card_header("clipboard-check", "Complete")
    .card-body
      = simple_form_for([:admin, resource], namespace: "complete", url: complete_admin_camp_application_path(resource)) do |f|
        .row
          .col.mb-3
            = f.input :send_email
        .row
          .col.d-grid
            = f.button :submit, "Complete", class: "btn-override-success"