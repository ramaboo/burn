= render "shared/error_messages", resource: resource
= simple_form_for([:admin, resource]) do |f|
  .row
    .col-md-12.mb-3
      = f.input :title
  .row
    .col-md-12.mb-3
      = f.input :description
  .row
    .col-md-6.mb-3
      = f.input :department, include_blank: false
  .row
    .col.d-grid
      = f.button :submit, submit_button_text(resource)